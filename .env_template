# Domain and basic settings
DOMAIN="cloud.example.com"
RETRIES=3
SLEEP_BETWEEN=20
COOLDOWN_SECS=5400 # 1.5h

# Telegram notification settings
TELEGRAM_BOT_TOKEN=***************************
TELEGRAM_CHAT_ID=*******************

# Paths and file names
WATCHDOG_DIR="/path/to/nextcloud/watchdog"
ENV_FILE=".env"
BLOCK_FILENAME="block_restart.txt"
LOG_FILENAME="nc_watchdog.log"
COOLDOWN_FILENAME="nc_watchdog.cooldown"
STATUS_FILENAME="nc_watchdog.status"

# Network settings
HTTPS_PORT=443
EXTERNAL_CONNECT_TIMEOUT=5
EXTERNAL_MAX_TIME=10
LOCAL_CONNECT_TIMEOUT=3
LOCAL_MAX_TIME=6

# System dependencies (space-separated)
REQUIRED_DEPS="curl ss"

# Status values
STATUS_FAIL="FAIL"
STATUS_OK="OK"
STATUS_UNKNOWN="UNKNOWN"

# Reboot commands (tried in order)
REBOOT_COMMANDS="systemctl reboot /sbin/reboot reboot"
